{
	"permissions": {
		"allow": [
			"Bash(gh pr list)",
			"Bash(gh pr view)",
			"Bash(gh pr diff)",
			"Bash(gh pr checks)",
			"Bash(gh run view)",
			"Bash(git add)",
			"Bash(git commit -m *)",
			"Bash(pnpm:*)",
			"Read(./)",
			"Edit(./)"
		],
		"deny": [
			"Read(.env*)",
			"Edit(.env*)",
			"Read(**/.env*)",
			"Read(.config/gh/hosts.yml)",
			"Read(~/.ssh/*)",
			"Read(~/.aws/*)"
		]
	},
	"language": "japanese",
	"alwaysThinkingEnabled": true
}
